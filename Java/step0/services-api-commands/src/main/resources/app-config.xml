<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    
    <context:component-scan base-package="org.cqrs101" />
    <!--<context:property-placeholder location="application.properties" />-->
    
    <bean id="repositoryHelper" class="org.cqrs101.HsqlDbRepositoryHelper"></bean>
    <bean id="activeMqBusHelper" class="org.cqrs.ActiveMqBusHelper"></bean>
    
    <bean id="bus" class="org.cqrs.ActiveMqBusImpl">
        <constructor-arg>
            <list>
                <ref bean="invoicesCommandHandler" />
            </list>
        </constructor-arg>      
        <constructor-arg type = "java.lang.String" value = "Commands"/>
        <constructor-arg ref="activeMqBusHelper"/>
    </bean>
    <bean id="globalValidator" class="org.cqrs.GlobalValidatorImpl">
        <constructor-arg>
            <list>
            </list>
        </constructor-arg>      
    </bean>
</beans>  